<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    android:background="@drawable/classroom"
    tools:context="com.example.hnonhaaa.whatyourgrade.Main2Activity">

    <TextView
        android:id="@+id/text_showName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:background="#9999ccff"
        android:textAlignment="center"
        android:text="TextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:background="#bb99ccff"
        android:id="@+id/text_showGrade"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text_showName"
        android:textAlignment="center"
        android:textSize="200dp"
        android:layout_centerHorizontal="true"
        android:text="" />


</RelativeLayout>
